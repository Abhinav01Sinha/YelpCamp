<% layout('/layouts/boilerplate') -%>

<div class="row">
  <h1 class="text-center">Add new Camp</h1>
  <div class="col-md-6 offset-md-3">
    <div class="mb-2">
      <form method="POST" action="/campgrounds" novalidate class="check-form">
        <div class="col-12 mb-1">
          <label for="title">Enter Title :</label>
          <input
            class="form-control"
            type="text"
            id="title"
            name="Campground[title]"
            required
          />
          <div class="valid-feedback">Looks good!</div>
        </div>
        <div class="col-12 mb-1">
          <label for="location">Enter Location :</label>
          <input
            class="form-control"
            type="text"
            id="location"
            name="Campground[location]"
            required
          />
          <div class="valid-feedback">Looks good!</div>
        </div>

        <div class="col-12 mb-1">
          <label for="location">Enter Image URL</label>
          <input
            class="form-control"
            type="text"
            id="location"
            name="Campground[image]"
            required
          />
          <div class="valid-feedback">Looks good!</div>
        </div>

        <div class="col-12 mb-3">
          <label for="price">Enter price</label>
          <div class="input-group mb-3">
            <span class="input-group-text">$</span>
            <input
              type="Number"
              class="form-control"
              id="price"
              name="Campground[price]"
              placeholder="0.00"
              required
            />
            <div class="valid-feedback">Looks good!</div>
          </div>
        </div>

        <div class="col-12 mb-3 form-floating">
          <textarea
            class="form-control"
            placeholder="Enter Description"
            id="description"
            name="Campground[description]"
            required
          ></textarea>
          <label for="floatingTextarea">Enter description</label>
          <div class="valid-feedback">Looks good!</div>
        </div>

        <button class="btn btn-primary">Add Camp</button>
        <br />
      </form>
    </div>
    <button class="btn btn-dark">
      <a href="/campgrounds">Return to All Camps</a>
    </button>
  </div>
</div>
