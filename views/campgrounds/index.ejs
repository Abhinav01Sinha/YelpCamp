<% layout('/layouts/boilerplate') -%>

<h1 style="margin-left: 25%">ALL CAMPGROUNDS in United States</h1>

<ol>
  <%for(let camp of campgrounds){%>

  <div class="card mb-3">
    <div class="row">
      <div class="col-md-4">
        <img
          style="height: 200px; width: 400px"
          src="<%=camp.image%>"
          class="img-fluid rounded-start"
          alt="..."
        />
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%=camp.title%></h5>
          <p class="card-text"><%=camp.description%></p>
          <p class="card-text">
            <small class="text-body-secondary"><%=camp.location%></small>
          </p>
          <a href="campgrounds/<%= camp._id %>" class="btn btn-primary"
            >Details</a
          >
        </div>
      </div>
    </div>
  </div>

  <%}%>
</ol>
